<%- include('partials/header') %>
	<main class="recent">
		<!-- Header -->
		<div class="recent__header-container">
			<h1 class="recent__header">Recently Played</h1>
		</div>

		<hr>

		<!-- Recent Container -->
		<section class="recent__container">
			<!-- Recently Played Track -->
			<% for (let i = 0; i < recentArray.length; i++) { %>
				<div class="recent__track">
					<!-- Album Cover -->
					<a href=<%= recentArray[i].track.album.external_urls.spotify %> target="_blank"><img class="recent__track-image" src=<%= recentArray[i].track.album.images[0].url %> alt="album cover"></a>

					<!-- Track Name -->
					<p class="recent__track-name">
						<a class="recent__track-name-link" href=<%= recentArray[i].track.external_urls.spotify %> target="_blank"><%= recentArray[i].track.name %></a>
					</p>
					
					<!-- Track Artist --> 
					<p class="recent__track-artist">
						<% for (let j = 0; j < trackArtists[i].length; j++) { %>
							<a class="recent__track-artist-link" href=<%= trackArtists[i][j].url %> target="_blank"><%= trackArtists[i][j].name %></a>
						<% } %>
					</p>
				</div>
			<% } %>
		</section>
	</main>
<%- include('partials/footer') %>