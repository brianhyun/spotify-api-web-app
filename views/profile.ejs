<%- include('partials/header') %>

	<main class="profile">
		<!-- Profile Section -->
		<section class="profile__profile">
			<!-- Image -->
			<img class="profile__profile-picture" src=<%= profileImage %> alt="profile picture">

			<!-- Username -->
			<h1 class="profile__profile-username">
				<a class="profile__profile-username-link" href=<%= profileSrc %> target="_blank"><%= username %></a>
			</h1>

			<!-- Stats List -->
			<div class="profile__profile-stats-list">
				<div class="profile__profile-stats-item">
					<p class="profile__profile-stats-num"><%= followers %></p>
					<p class="profile__profile-stats-label">Followers</p>
				</div>
				<div class="profile__profile-stats-item">
					<p class="profile__profile-stats-num"><%= following %></p>
					<p class="profile__profile-stats-label">Following</p>
				</div>
				<div class="profile__profile-stats-item">
					<p class="profile__profile-stats-num"><%= playlistCount %></p>
					<p class="profile__profile-stats-label">Playlists</p>
				</div>
			</div>
		</section>

		<hr class="profile__hr">

		<!-- Stats Container -->
		<section class="profile__top-stats-container">
			<div class="profile__top-stats-menu">
				<p id="top-artists" class="profile__top-stats-menu-header profile__top-stats-menu-header--active">Top Artists</p>
				<p id="top-tracks" class="profile__top-stats-menu-header">Top Tracks</p>
			</div>

			<!-- Top Artists Section -->
			<section class="paa__container">
				<!-- Top Artist -->
				<% for (let i = 0; i < topArtistsArray.length; i++) { %>
					<div class="paa__artist">
						<!-- Artist Image -->
						<a href=<%= topArtistsArray[i].external_urls.spotify %> target="_blank"><img class="paa__artist-image" src=<%= topArtistsImageURLs[i] %> alt="artists profile picture"></a>
						
						<!-- Artist Name -->
						<h3 class="paa__artist-name">
							<a class="paa__artist-name-link" href=<%= topArtistsArray[i].external_urls.spotify %> target="_blank"><%= topArtistsArray[i].name %></a>	
						</h3>
					</div>
				<% } %>
			</section>

			<!-- Top Tracks Section -->
			<section class="ptpa__container profile__top-tracks-container">
				<!-- Top Track -->
				<% for (let i = 0; i < topTracksArray.length; i++) { %>
					<div class="ptpa__item">
						<!-- Album Cover -->
						<a href=<%= topTracksArray[i].album.external_urls.spotify %> target="_blank"><img class="ptpa__item-image" src=<%= topTracksImageURLs[i] %> alt="album cover"></a>
						
						<!-- Track Name -->
						<p class="ptpa__item-name">
							<a class="ptpa__item-name-link" href=<%= topTracksArray[i].external_urls.spotify %> target="_blank"><%= topTracksArray[i].name %></a>
						</p>
						
						<!-- Track Artist --> 
						<p class="ptpa__item-artists">
							<% for (let j = 0; j < trackArtists[i].length; j++) { %>
								<a class="ptpa__item-artist-link" href=<%= trackArtists[i][j].url %> target="_blank"><%= trackArtists[i][j].name %></a>
							<% } %>
						</p>
					</div>
				<% } %>
			</section>
		</section>
	</main>

<%- include('partials/footer') %>