<%- include('partials/header') %>
	<main class="playlists">
		<!-- Header -->
		<div class="header-container">
			<h1 class="header">Playlists</h1>
		</div>

		<hr>

		<!-- Playlists Container -->
		<section class="ptpa__container">
			<!-- Playlist -->
			<% for (let i = 0; i < playlistsArray.length; i++) { %>
				<div class="ptpa__item">
					<!-- Playlist Cover -->
					<a href=<%= playlistsArray[i].external_urls.spotify %> target="_blank"><img class="ptpa__item-image" src=<%= playlistsImageURLs[i] %> alt="playlist cover"></a>
					
					<!-- Playlist Name -->
					<p class="ptpa__item-name">
						<a class="ptpa__item-name-link" href=<%= playlistsArray[i].external_urls.spotify %> target="_blank"><%= playlistsArray[i].name %></a>
					</p>

					<!-- Playlist Track Count -->
					<p class="ptpa__item-track-count">
						<%= playlistsArray[i].tracks.total %> Tracks
					</p>
				</div>
			<% } %>
		</section>
	</main>
<%- include('partials/footer') %>