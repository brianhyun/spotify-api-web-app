<%- include('partials/header') %>
	<main class="main-dash">
		<!-- Profile Section -->
		<section class="main-dash__profile">
			<img class="main-dash__profile-picture" src=<%= profileImage %> alt="profile picture">
			<div class="main-dash__profile-content">
				<a class="main-dash__username-link" href=<%= profileSrc %> target="_blank"><h1 class="main-dash__username"><%= username %></h1></a>
				<div class="main-dash__profile-stats">
					<p class="main-dash__stats-item">Followers</p><span class="main-dash__stats"><%= followers %></span>
					<div class="main-dash__stats-separator"></div>
					<p class="main-dash__stats-item">Following</p><span class="main-dash__stats"><%= following %></span>
					<div class="main-dash__stats-separator"></div>
					<p class="main-dash__stats-item">Playlists</p><span class="main-dash__stats"><%= playlistCount %></span>
				</div>
			</div>
		</section>

		<hr>

		<!-- Stats Container -->
		<section class="main-dash__top-stats-container">
			<!-- Top Artists Section -->
			<section class="main-dash__top-artists-container">
				<h1 class="main-dash__top-artists-header">Top Artists</h1>
				<% for (let i = 0; i < topArtistsArray.length; i++) { %>
					<div class="main-dash__top-artist">
						<a href=<%= topArtistsArray[i].external_urls.spotify %> target="_blank"><img class="main-dash__top-artist-image" src=<%= topArtistsArray[i].images[1].url %> alt="artists profile picture"></a>
						<a href=<%= topArtistsArray[i].external_urls.spotify %> target="_blank"><h3 class="main-dash__top-artist-header"><%= topArtistsArray[i].name %></h3></a>	
					</div>
				<% } %>
			</section>
			<!-- Top Tracks Section -->
			<section class="main-dash__top-tracks-container">
				<h1 class="main-dash__top-tracks-header">Top Tracks</h1>
				<% for (let i = 0; i < topTracksArray.length; i++) { %>
					<div class="main-dash__top-track">
						<%= topTracksArray[i].name %>
					</div>
				<% } %>
			</section>
		</section>
	</main>
<%- include('partials/footer') %>